pkgrel=1
pkgdesc="Diff Tool for .pacnew files"
arch=(any)
url="https://github.com/sainnhe/dotfiles"
license=('unknown')
provides=('pacdifftool')
conflicts=('pacdifftool')
source=('pacdifftool')
md5sums=('78c4fc08445c72452c61e5cde4f35f14')

pkgver() {
    date --utc +"%Y.%m.%d"
}

package() {
    install -d "${pkgdir}/usr/bin"
    install -Dm 755 "${srcdir}/pacdifftool" "${pkgdir}/usr/bin/"
}
