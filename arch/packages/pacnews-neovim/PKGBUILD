# Maintainer: Sainnhe Park <sainnhe@gmail.com>
pkgname=pacnews-neovim
pkgver=2020.09.16
pkgrel=1
pkgdesc="Find .pacnew files and merge them with a neovim diff"
arch=(any)
url="https://github.com/sainnhe/dotfiles"
license=('unknown')
provides=('pacnews')
conflicts=('pacnews')
source=('pacnews')
md5sums=('3bbc9174e877ec706a290ecc581d80ce')

pkgver() {
    date --utc +"%Y.%m.%d"
}

package() {
    install -d "${pkgdir}/usr/bin"
    install -Dm 755 "${srcdir}/pacnews" "${pkgdir}/usr/bin/"
}
